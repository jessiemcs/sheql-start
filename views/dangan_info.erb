<section id="accordions">
            <div class="container">
                <div class="full-width">
                    <div class="small-padding">
                        <h2 class="pink-underline small-bottom-padding">Dangan-Info</h2>
                        
                        <div class="accordion round-corners pink-background">
                            <div class="accordion-headline">
                                <h4>Games</h4>
                            </div>
                            <div class="accordion-content">
                           <% Game.all.each do |sans| %>
								<div class="container">
								<div class="half picture"><img src="<%=sans.picture%>"></div>
								<div class="half name"><a href="/games/<%= sans.id%>"> <%=sans.name%></a></div>
								</div>
							  <% end %> 
                            </div>
                        </div>
                        
                        <div class="accordion round-corners black-background light-text">
                            <div class="accordion-headline">
                                <h4>Characters</h4>
                            </div>
                            <div class="accordion-content">
								<% Character.all.each do |sans| %>
								<div class="container">
									<div class="half picture"><img src="<%=sans.picture%>"></div>
									<div class="half name"><a href="/characters/<%= sans.id%>"> <%=sans.name%></a></div>
								</div>
							  <% end %>   
                            </div>
                        </div>
                        
                        <div class="accordion round-corners grey-background">
                            <div class="accordion-headline">
                                <h4>Animes</h4>
                            </div>
                            <div class="accordion-content">
                               <% Anime.all.each do |sans| %>
								<div class="container">
									<div class="half picture"><img src="<%=sans.picture%>"></div>
									<div class="half name"><a href="/animes/<%= sans.id%>"> <%=sans.name%></a></div>
								</div>
							  <% end %>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </section>